
@{
    ViewBag.Title = "CustomerPayment";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<section class="content-header">
    <h1>
        Payments
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li class="active"><a href="#">Payments</a></li>
    </ol>
</section>

<section class="content">

    <div class="box box-info">

        <!-- /.box-header -->
        <div class="box-body">
            <form class="form-horizontal">

                <div class="form-group">
                    <div class="col-xs-8">
                        <label class="control-label col-xs-2" for="customer">Customer :</label>
                        <div class="col-xs-8">
                            <input type="text" class="form-control" id="customer">
                        </div>
                    </div>

                    <div class="col-xs-4">
                        <label class="control-label col-xs-2" for="no">No :</label>
                        <div class="col-xs-8">
                            <input type="text" class="form-control" id="no">
                        </div>
                    </div>

                    <div class="col-xs-8">
                        <label class="control-label col-xs-2" for="ref">Balance :</label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control" id="ref">
                        </div>
                    </div>

                    <div class="col-xs-4">
                        <label class="control-label col-xs-2" for="date">Date:</label>
                        <div class="col-xs-8">
                            <input type="date" class="form-control" id="date">
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
   
    <!-- table -->

    <div class="box box-success">
        <div class="box-header">
            <h3 class="box-title">Invoices</h3>
            
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table id="ple2" class="table table-hover">
                <tr>
                    <th>No</th>
                    <th>Date</th>
                    <th>Age</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Balance</th>
                </tr>
                <tr>
                    <td>183</td>
                    <td>John Doe</td>
                    <td>11-7-2014</td>
                    <td><span class="label label-success">Approved</span></td>
                    <td>1244</td>
                    <td>2454</td>
                </tr>
                <tr>
                    <td>219</td>
                    <td>Alexander Pierce</td>
                    <td>11-7-2014</td>
                    <td><span class="label label-warning">Pending</span></td>
                    <td>11111</td>
                    <td>22222</td>
                </tr>
                <tr>
                    <td>657</td>
                    <td>Bob Doe</td>
                    <td>11-7-2014</td>
                    <td><span class="label label-primary">Approved</span></td>
                    <td>33333</td>
                    <td>44444</td>
                </tr>
                <tr>
                    <td>175</td>
                    <td>Mike Doe</td>
                    <td>11-7-2014</td>
                    <td><span class="label label-danger">Denied</span></td>
                    <td>55555</td>
                    <td>66666</td>
                </tr>
            </table>
        </div>
        <!-- /.box-body -->
    </div>

    <!-- inputs -->
    <div class="box box-warning">

        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-xs-10">

                    <label class="control-label col-xs-2" for="employee">Employee :</label>
                    <div class="col-xs-7">
                        <input type="text" class="form-control" id="employee">
                    </div>

                </div>
                <div class="col-xs-10">

                    <label class="control-label col-xs-2" for="route">Route :</label>
                    <div class="col-xs-7">
                        <input type="text" class="form-control" id="route">
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-10">
            <div class="col-sm-2 col-lg-3">
                <button type="button" class="btn  btn-primary btn-block">New</button>
            </div>
            <div class="col-sm-2 col-lg-3">
                <button type="button" class="btn  btn-primary btn-block">Delete</button>
            </div>
            <div class="col-sm-2 col-lg-3">
                <button type="button" class="btn  btn-primary btn-block">Save</button>
            </div>
            <div class="col-sm-2 col-lg-3">
                <button type="button" class="btn  btn-primary btn-block">Print</button>
            </div>
        </div>
    </div>

</section>

@section scripts {
<script>
  $(function () {
    $('#ple2').DataTable({
	  "scrollY": "100px",
      "scrollCollapse": true,
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
} 